%tr
  %td= link_to mission.title, mission, :id=>"show-mission-#{mission.id}"
  %td= raw mission.description
  -if user_signed_in? and current_user.has_role?(:admin)
    %td= mission.source_code_file_name
    %td= link_to 'Edit', edit_mission_path(mission)
    %td= link_to 'Destroy', mission, :method => :delete, :data => { :confirm => 'Are you sure?' }
